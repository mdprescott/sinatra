<h3 class="text-center text-secondary mt-4 mb-4"><em>Next time, make sure to read your manifesto <b>before</b> you publish it...</em></h3>

<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="col-8 mb-2 mx-auto">
    <label for="author">Edit Author:</label>
    <div>
      <textarea type="text" class="form-control" id="author" name="author" rows="1" placeholder="Edit Author..."><%= @post.author %></textarea>
    </div>
  </div>
  <div class="col-8 mb-2 mx-auto">
    <label for="title">Edit Title:</label>
    <div>
      <textarea type="text" class="form-control" id="title" name="title" rows="1" placeholder="Edit Title..."><%= @post.title %></textarea>
    </div>
  </div>
  <div class="col-8 mb-2 mx-auto">
    <label for="post_body">Edit Post:</label>
    <div>
      <textarea id="post_body" class="form-control" rows="5" name="post_body" placeholder="Edit Post..."><%= @post.body %></textarea>
    </div>
  </div>
  <div class="col-8 mb-2 pb-2 mx-auto">
    <div>
      <button type="submit" id="edit_post" class="btn btn-primary mb-2 float-right">Edit Post</input>
    </div>
  </div>
</form>
